<Window x:Class="ClassicWin32Host.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassicWin32Host"
        mc:Ignorable="d"
        Title="Packaged WPF App with Plugins" Height="720" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="144"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="32" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Frame Grid.Row="0" Grid.Column="0"
               Source="ExtensionsPage.xaml">
        </Frame>
        <Frame Grid.Row="1" Grid.Column="0"
               Source="MainPage.xaml">
        </Frame>
        
        <TextBlock Grid.Row="2" Grid.Column="0"
            HorizontalAlignment="Center" VerticalAlignment="Center" Name="myText" Margin="5"></TextBlock>
    </Grid>
</Window>
